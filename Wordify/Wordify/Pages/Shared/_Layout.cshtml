<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wordify</title>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/icons.css" />
    <link rel="stylesheet" href="~/css/modules/HomeUpload.css" />
    <link rel="stylesheet" href="~/css/modules/LoginPage.css" />
    <link rel="stylesheet" href="~/css/modules/RegisterPage.css" />
    <link rel="stylesheet" href="~/css/modules/ProfilePage.css" />
    <link rel="stylesheet" href="~/css/modules/AdminPage.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Oswald|Pacifico" rel="stylesheet">
</head>


<body>
    <header>
        <a asp-page="/Index"><h1 class="logo">Wordify</h1></a>
        <nav>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
    </header>

    <main>
        <section>
            @RenderBody()
        </section>
    </main>

    <footer>
        <a asp-page="/Index" class="logo">Wordify</a>
        <div class="icon-Microsoft"></div>
        <div id="tagline">Utilizing Microsoft OCR Technology</div>
        <div id="smallprint">&copy; 2018   Home   About   Contact</div>
    </footer>
</body>
</html>
